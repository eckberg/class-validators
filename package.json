{
  "scripts": {
    "build": "tsc",
    "makepretty": "prettier --write -l '**/*.ts'",
    "lint": "tslint -p .",
    "precommit": "lerna run tsc:check && lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "npx prettier --write",
      "git add"
    ],
    "src/**/*.ts": [
      "npm run lint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run tsc:check && lint-staged"
    }
  },
  "devDependencies": {
    "lerna": "^2.11.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1"
  }
}
